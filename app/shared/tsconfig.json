{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "exclude": ["node_modules"]
}
